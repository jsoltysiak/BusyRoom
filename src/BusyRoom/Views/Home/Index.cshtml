@model IEnumerable<BusyRoom.Models.Room>

@{
    ViewData["Title"] = "Home Page";
    var isOccupied = Model.First().States.Last().IsOccupied;
    var occupiedText = isOccupied ? "OCCUPIED" : "FREE";
    var occupiedClass = isOccupied ? "" : "free";
}

<div class="row">
    <div class="col-md-4">
        <h2>Room name: @Model.First().Name</h2>
        <p>Number of states: @Model.First().States.Count</p>
    </div>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="@occupiedClass" id="occupiedArea">
            <span>@occupiedText</span>
        </div>
    </div>
</div>

<div class="row">
    <div class="ct-chart ct-double-octave" id="chart1"></div>
</div>

<div class="row lcd">
    <div class="col-md-4">
        <span>Temperature: @Model.First().States.Last().Temperature°C</span>
    </div>
    <div class="col-md-4">
        <span>Humidity: @Model.First().States.Last().Humidity%</span>
    </div>
    <div class="col-md-4">
        <span>Brightness: @Model.First().States.Last().Brightness/9</span>
    </div>
</div>
